<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.entity.TechnicalTaskEntity" table="technical_task" schema="itcompany">
        <id name="ttCode">
            <column name="tt_code" sql-type="int(11)"/>
        </id>
        <property name="tkDescription">
            <column name="tk_description" sql-type="varchar(500)" length="500"/>
        </property>
        <property name="cost">
            <column name="cost" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>