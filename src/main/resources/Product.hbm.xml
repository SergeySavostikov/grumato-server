<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.testEntity.Product" table="product" schema="itcompany">
        <id name="productCode" column="product_code"/>
        <property name="productName" column="product_name"/>
        <property name="productDirection" column="product_direction"/>
    </class>
</hibernate-mapping>