<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.entity.ProductEntity" table="product" schema="itcompany">
        <id name="productCode">
            <column name="product_code" sql-type="int(11)"/>
        </id>
        <property name="productName">
            <column name="product_name" sql-type="varchar(75)" length="75"/>
        </property>
        <property name="productDirection">
            <column name="product_direction" sql-type="varchar(75)" length="75"/>
        </property>
    </class>
</hibernate-mapping>