<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.testEntity.Orders" table="orders" schema="itcompany">
        <id name="orderCode" column="order_code"/>
        <property name="orderDescription" column="order_description"/>
        <property name="customerCode" column="customer_code"/>
        <property name="dateOfReceiptOfOrder" column="date_of_receipt_of_order"/>
        <property name="orderExecutionDate" column="order_execution_date"/>
        <property name="orderCost" column="order_cost"/>
        <property name="orderName" column="order_name"/>
    </class>
</hibernate-mapping>